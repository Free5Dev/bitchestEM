<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Bitchest -{% endblock %}</title>
        <link rel="shortcut icon" href="https://images-eu.ssl-images-amazon.com/images/I/41lLuW%2BJurL.png" type="image/x-icon">
        <link rel="stylesheet" href="/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="//cdn.jsdelivr.net/chartist.js/latest/chartist.min.css">
        <script src="//cdn.jsdelivr.net/chartist.js/latest/chartist.min.js"></script>
        <link rel="stylesheet" href="/css/styles.css"/>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {# navbar #}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('admin_login') }}"> <img src="/images/bitchest_logo.png" alt="" style="width:84px; height=64px;"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav mr-auto">
                    {% if app.user %}
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ path('admin_cryptos') }}">BitCoin </span></a>
                        </li>
                   {% endif %}
                    {% if app.user and app.user.id=='1'  %}
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ path('user_essaye') }}">Wallet</span></a>
                        </li>
                         <li class="nav-item ">
                            <a class="nav-link" href="{{ path('admin_transaction') }}">Transaction</span></a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ path('admin_list') }}">Utilisateur</span></a>
                        </li>
                   {% endif %}
                </ul>
                <ul class="navbar-nav ml-3">
                    {% if app.user %}
                        {# <li class="nav-item">
                            <a href="{{ path('admin_logout') }}" class="nav-link">Deconnexion </a>
                        </li> #}
                        {#  #}
                        <li class="nav-item dropdown">
                            <a href="" class="nav-link dropdown-toggle" data-toggle="dropdown" id="accountDropdownLink">
                                <img src="{{ app.user.picture }}" class="avatar avatar-mini" alt="Avatar de {{ app.user.fullName }}">  {{ app.user.fullName }}
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="accountDropdownLink">
                                {# <a href="{{ path('admin_cryptos') }}" class="dropdown-item">Cr√©er une annonce </a> #}
                                <div class="dropdown-divider"></div>

                                <a href="{{ path('admin_myAccount') }}" class="dropdown-item">Mon Compte</a>
                                <a href="{{ path('users_profile') }}" class="dropdown-item">Modifier mon profil</a>

                                <div class="dropdown-divider"></div>
                                 <a href="{{ path('admin_password') }}" class="dropdown-item">Modifier mot de passe</a>
                                <a href="{{ path('admin_logout') }}" class="dropdown-item">Deconnexion</a>
                            </div>
                        </li>
                        {#  #}
                    {% else %}
                        
                        <li class="nav-item">
                            <a href="{{ path('admin_login') }}" class="nav-link">Connexion</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
        {# endnavbar #}

        {# flash #}
        {% for label, messages in app.flashes %}
            <div class="container">
                <div class="alert alert-{{ label }}">
                    {% for message in messages %}
                        <p>{{ message | raw }}</p>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
        {# endflash #}
       
        {# block body #}
        {% block body %}{% endblock %}
        {# endblock #}

     {# footer #}
        <footer class="mt-5 bg-light py-5 text-center">
            <p>Copyright Bitchest !</p>
        </footer>
        {# endfooter #}
        {# chargement du js #}
        {# <script src="/js/jquery.js"></script>  #}
        {# <script src="/js/jquery.min.js" type="text/javascript"></script>
         <script src="/js/slim.min.js"></script>
        <script src="/js/popper.min.js"></script>
        <script src="/js/bootstrap.min.js"></script> #}

        
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        {% block javascripts %}{% endblock %}
        
    </body>
</html>
