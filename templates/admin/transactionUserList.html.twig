{% extends 'base.html.twig' %}

{% block title  %} Listes des transactions de l'utilisateur :  {% endblock %}

{% block body %}
    <div class="container cryptos">
         <h1>Historiques de vos transaction </h1>
        <div class="row">
            <table class="table table-hover">
                <tr>
                    <th>ID</th>
                    <th>Type</th>
                    <th>Etat</th>
                    <th>Date</th>
                    <th>Supprimer</th>
                </tr>

                {% for transaction in transactions %}
                    <tr>
                        <td>{{ transaction.id}}</td>
                        <td>{{ transaction.type }}</td>
                        <td>{{ transaction.etat }}</td>
                        <td>{{ transaction.createdAt | date('d/m/Y Ã  H:i') }}</td>
                        <td><a href="" class="btn btn-danger">Supprimer</a></td>
                    </tr>
                {% endfor %}
            </table>
            
        </div>  
    </div>
{% endblock %}